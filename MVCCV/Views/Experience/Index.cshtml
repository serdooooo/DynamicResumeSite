@using MVCCV.Models.Entity
@model List<Experiences>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Deneyimler</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Baslik</th>
        <th>Alt Baslik</th>
        <th>Tarih</th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Duzenle</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.Title</td>
            <td>@x.Subtitle</td>
            <td>@x.ExperienceDate</td>
            <td>@x.Definition</td>
            <td><a href="/Experience/ExperienceDelete/@x.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Experience/ExperienceGet/@x.ID" class="btn btn-warning">Duzenle</a></td>
        </tr>
    }

</table>
<a href="/Experience/ExperienceAdd" class="btn btn-primary">Yeni deneyim ekle</a>